{
	"exclude": ["node_modules", "dist"],
	"include": ["src"],
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "src",
		"baseUrl": "src/",
    "paths": {
      "@app/*": ["app/*"],
      "@config/*": ["config/*"],
      "@data/*": ["data/*"],
      "@domain/*": ["domain/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@presentation/*": ["presentation/*"],
    },
		"outDir": "dist/",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
